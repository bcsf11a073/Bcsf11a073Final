      @Scripts.Render("~/bundles/jquery")
     
      <script>

          $(document).ready(function () {


              $("#inputEmail").change(function () {

                  var s = $("#inputEmail").val();

                  $.getJSON("/Signup/validate?name=" + s, function (data) {
                      if (data) {
                          $("#availname").css("color", "Green")
                          $('availname').text("User Name Available")
                      }
                      else {

                          $("#availname").css("color", "Red")
                          $('availname').text("User Name not Available")


                      }
                      

                  })
                  


              })



          });
          </script>


